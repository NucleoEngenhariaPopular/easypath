# Development Dockerfile for Frontend
FROM node:20-alpine

WORKDIR /app

# Copy dependency files first (for efficient caching)
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy all source files
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Ensure dependencies are up to date and start Vite
CMD ["sh", "-c", "npm ci --prefer-offline && npm run dev -- --host 0.0.0.0"]
