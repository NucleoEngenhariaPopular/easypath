FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt requirements-dev.txt ./
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r requirements-dev.txt

# Copy application code (will be overridden by volume mount)
COPY . .

EXPOSE 8081

# Use reload for development (limited to app directory to reduce memory usage)
# Set DISABLE_RELOAD=1 to disable auto-reload if memory is constrained
CMD ["sh", "-c", "if [ \"$DISABLE_RELOAD\" = \"1\" ]; then uvicorn app.main:app --host 0.0.0.0 --port 8081; else uvicorn app.main:app --host 0.0.0.0 --port 8081 --reload --reload-dir /app/app; fi"]